extends base 

block content 
    section.login 
        .login-card
            h1 Login to your Account
            form.form.form__login 
                .form-group.login__form-group
                    label(for="email") Email address
                    input(type="email", name="email", id="email", placeholder='you@example.com' required)
                .form-group.login__form-group
                    label(for="password") Password
                    input(type="password", name="password", placeholder='•••••••••' id="password", required minLength='8')
                .form-group.login__form-group
                    button.login-btn Login
            .login-footer
                p Don't have an account?
                a(href="/signup") Sign up